<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Nework" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Nework.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Nework.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Nework.LargeComponent</item>
    </style>

    <style name="Theme.Nework.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Nework.Transparent" parent="Theme.Nework">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Shape appearances -->
    <style name="ShapeAppearance.Nework.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_small</item>
    </style>

    <style name="ShapeAppearance.Nework.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_medium</item>
    </style>

    <style name="ShapeAppearance.Nework.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_large</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget.Nework.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Nework.MediumComponent</item>
    </style>

    <style name="Widget.Nework.Avatar" parent="">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Nework.Circle</item>
    </style>

    <style name="ShapeAppearanceOverlay.Nework.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>